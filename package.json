{
    "name": "intent-design-system",
    "version": "0.2.2",
    "private": false,
    "type": "module",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/iamjulienjulien/intent-design-system.git"
    },
    "homepage": "https://github.com/iamjulienjulien/intent-design-system#readme",
    "bugs": {
        "url": "https://github.com/iamjulienjulien/intent-design-system/issues"
    },
    "peerDependencies": {
        "react": ">=18",
        "react-dom": ">=18",
        "tailwindcss": ">=3.4"
    },
    "devDependencies": {
        "@types/react": "^19.2.10",
        "tailwindcss": "^4.1.18",
        "tsup": "^8.5.1",
        "typescript": "^5.0.0",
        "vitest": "^4.0.18"
    },
    "scripts": {
        "build": "tsup",
        "prepare": "npm run build",
        "dev": "tsup --watch src --watch styles",
        "typecheck": "tsc -p tsconfig.json --noEmit",
        "test": "vitest",
        "test:watch": "vitest --watch"
    },
    "files": [
        "dist",
        "styles"
    ],
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "style": "./styles/index.css",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "react-server": "./dist/index.js",
            "import": "./dist/index.js",
            "default": "./dist/index.js"
        },
        "./tailwind-preset": {
            "types": "./dist/tailwind-preset.d.ts",
            "import": "./dist/tailwind-preset.js",
            "default": "./dist/tailwind-preset.js"
        },
        "./styles": {
            "default": "./styles/index.css"
        },
        "./styles/tokens.css": {
            "default": "./styles/tokens.css"
        }
    }
}
